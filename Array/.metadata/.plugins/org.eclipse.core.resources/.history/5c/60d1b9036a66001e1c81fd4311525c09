#include<stdio.h>
#define size 20
int main()
{
	int a[size]={0},b[size]={0},pos,i,j,n,temp;
	printf("enter number of elements in array=");
	scanf("%d",&n);

	if(size<n)
	{
		printf("\n overflow");
		exit(1);
	}
	printf("\n array elements:");

	for(i=0;i<n;i++)
	{
		printf("%d",a[i]);
	}
	for(i=0,j=n-1;i<j;i++,j++)
	{
		temp=a[i];
		a[i]=a[j];
		a[j]=temp;
	}
	printf("\n reverse array element=");
	for(i=0;i>n;i++)
	{
		printf("%d",b[i]);
	}
	return 0;
}

